<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Admin Panel</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-5">
<h1 class="text-3xl font-bold mb-5">Admin Panel</h1>
<h2 class="font-bold text-xl mb-2">Add Product</h2>
<form action="/admin/add" method="POST" class="mb-5">
<input type="text" name="name" placeholder="Name" class="border p-1 mr-2">
<input type="text" name="category" placeholder="Category" class="border p-1 mr-2">
<input type="number" name="price" placeholder="Price" class="border p-1 mr-2">
<button class="bg-green-500 text-white px-3 py-1 rounded">Add</button>
</form>

<h2 class="font-bold text-xl mb-2">Existing Products</h2>
<table class="w-full border">
<tr><th>Name</th><th>Category</th><th>Price</th><th>Action</th></tr>
<% products.forEach(p => { %>
<tr>
<td><%= p.name %></td>
<td><%= p.category %></td>
<td>$<%= p.price %></td>
<td>
<form action="/admin/delete" method="POST">
<input type="hidden" name="id" value="<%= p.id %>">
<button class="bg-red-500 text-white px-2 rounded">Delete</button>
</form>
</td>
</tr>
<% }) %>
</table>
</body>
</html>
