<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Cart</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-5">
<h1 class="text-3xl font-bold mb-5">Your Cart</h1>
<a href="/" class="bg-gray-500 text-white px-4 py-2 rounded mb-5 inline-block">Back to Shop</a>
<table class="w-full border">
<tr>
<th>Product</th><th>Price</th><th>Qty</th><th>Total</th>
</tr>
<% cart.forEach(item => { %>
<tr>
<td><%= item.name %></td>
<td>$<%= item.price %></td>
<td>
<form action="/update-cart" method="POST">
<input type="hidden" name="id" value="<%= item.id %>">
<input type="number" name="qty" value="<%= item.qty %>" min="1" class="w-16">
<button class="bg-blue-500 text-white px-2 rounded">Update</button>
</form>
</td>
<td>$<%= item.price * item.qty %></td>
</tr>
<% }) %>
</table>
</body>
</html>
